        <!-- Portfolio Section-->
        <section class="page-section portfolio" id="portfolio">
            <div class="container">
                <!-- Portfolio Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Drink Database options</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                </div>
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <!-- Descriptive headings -->
                                <th style="width: 50%;text-align:left">Drink Name</th>
                                <th style="width: 50%;text-align:left">Drink Ingredients</th>
                                <th style="width: 50%;text-align:left">Drink Price</th>
                                <th style="width: 50%;text-align:left">Ranking</th>
                                <th style="width: 50%;text-align:left">Sweetness</th>
                                <th style="width: 50%;text-align:left">Tasted</th>
                                <th></th> <!--Edit button-->
                                <th></th><!--delete button-->
                            </tr>
                        </thead>
                        <tbody>
                
                            <!-- for loop that runs through each record and displays it. -->
                
                            <% for (let iCount = 0; iCount < drinks.length; iCount++) { %>
                                <tr>
                                    
                                    <!-- for in loop that displays each characteristic that we want to see (not the drink id) -->
                                    <% for (var a in drinks[iCount]) { 
                                        if (a != "drink_id"){%>
                                        <td><%= drinks[iCount][a] %> </td>
                                    <% }} %> 
                                    <!--delete button-->
                                    <td>    
                                        <form action="/deleteDrink/<%= drinks[iCount].drink_id%> " method="post">
                                        <button type="submit">Delete</button>
                                        </form>
                                    </td>
                                    <!-- edit button -->
                                    <td>
                                        <form action="/editDrink/<%= parseInt(drinks[iCount].drink_id)%>" method="get">
                                            <button type="submit">Edit</button>
                                        </form>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                        </table>
                        <br><br>
                        <form action="/" method="get">
                            <button type="submit">Return Home</button>
                        </form>
                        
                        <br>
                        <!-- Buttons to add drink, do the ascending and descending-->
                        <form action="/addDrink" method="get">
                            <button type="submit">Add Drink</button>
                        </form>
                        <form action="/sortRanking" method="get">
                            <button type="submit">Order Ascending</button>
                        </form>
                        <form action="/sortDesc" method="get">
                            <button type="submit">Order Descending</button>
                        </form>
                </div>
                
            </div>
        </section>
