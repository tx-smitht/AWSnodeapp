                    <script>
                        function checkName()
                        {
                       // age one https://api.agify.io/?name= add the name bella
                       
                
                
                       let sFirstName = document.getElementById("firstName").value;
                
                       fetch('https://api.agify.io/?name=' + sFirstName)
                        .then((response => response.json()))
                        .then((data) => {console.log(data); displayMessage(data)});
                        }
                    
                        function displayMessage(data)
                        {
                            // Attempting to control for bad entry
                            if (document.getElementById("firstName").value == "0") {
                                let errorMessage = "Please input a name"
                                document.getElementById("nameoutput").innerHTML = errorMessage;
                            }
                
                            let newMessage = "A person named " + data.name + " is on average " + data.age +
                             " years old based on a sample size of " + data.count;
                            document.getElementById("nameoutput").innerHTML = newMessage;
                        }
                
                
                
                
                
                        // Joke API
                        // joke one https://v2.jokeapi.dev/joke/Any?safe-mode
                        //    function displayMessage(data)
                        //     {
                        //         let newMessage = "A person named " + data.setup + " is on average " + data.delivery +
                        //          " years old based on a sample size of " + data.count;
                        //         document.getElementById("output").innerHTML = newMessage;
                        //     }
                        function jokeMaker()
                        {
                        fetch('https://v2.jokeapi.dev/joke/Any?safe-mode')
                        .then((response => response.json()))
                        .then((data) => {console.log(data); displayJokeMessage(data)});
                        }
                
                        
                
                        function displayJokeMessage(data){
                                if (data.type == "single") {
                                let newMessage = data.joke;
                                document.getElementById("jokeoutput").innerHTML = newMessage;
                            } else {
                                let newMessage = data.setup + "\n" + data.delivery;
                                document.getElementById("jokeoutput").innerHTML = newMessage;
                            }
                        }
                        
                
